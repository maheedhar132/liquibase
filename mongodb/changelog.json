{
    "databaseChangeLog": [
      {
        "changeSet": {
          "id": "1",
          "author": "Maheedhar",
          "comment": "Create person collection",
          "changes": [
            {
              "createCollection": {
                "collectionName": "person",
                "options": {
                  "$rawJson": {
                    "validator": {
                      "$jsonSchema": {
                        "bsonType": "object",
                        "required": [
                          "name",
                          "address"
                        ],
                        "properties": {
                          "name": {
                            "bsonType": "string",
                            "description": "The Name"
                          },
                          "address": {
                            "bsonType": ["string", "null"],
                            "description": "The Address. Can accept nulls."
                          },
                          "age": {
                            "bsonType": "int",
                            "description": "The Age"
                          }
                        }
                      }
                    },
                    "validationAction": "error",
                    "validationLevel": "strict"
                  }
                }
              }
            }
          ]
        }
      },
      {
        "changeSet": {
          "id": "2",
          "author": "Maheedhar",
          "comment": "Populate person table",
          "changes": [
            {
              "insertMany": {
                "collectionName": "person",
                "documents": {
                  "$rawJson": [
                    {
                      "name": "Nicolas Bodros",
                      "address": "Spain",
                      "age": 34
                    },
                    {
                      "name": "Luka Modrich",
                      "address": null,
                      "age": 55
                    }
                  ]
                }
              }
            }
          ]
        }
      }
    ]
  }
  