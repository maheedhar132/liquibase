<?xml version="1.0" encoding="UTF-8"?>	
<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xmlns:pro="http://www.liquibase.org/xml/ns/pro"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd
		http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd
		http://www.liquibase.org/xml/ns/pro http://www.liquibase.org/xml/ns/pro/liquibase-pro-latest.xsd" changeLogId="36ce1161-b515-4aac-80f2-8e72e60b440b">
  

    <changeSet  id="1"  author="Maheedhar">  
        <createTable  tableName="person">  
            <column  name="id"  type="int"  autoIncrement="true">  
                <constraints  primaryKey="true"  nullable="false"/>  
            </column>  
            <column  name="firstname"  type="varchar(50)"/>  
            <column  name="lastname"  type="varchar(50)">  
                <constraints  nullable="false"/>  
            </column>  
            <column  name="state"  type="char(2)"/>  
        </createTable>  
    </changeSet>  

    <changeSet  id="2"  author="Maheedhar">  
        <addColumn  tableName="person">  
            <column  name="username"  type="varchar(8)"/>  
        </addColumn>  
    </changeSet>

    <changeSet  id="3"  author="Maheedhar">  
        <addLookupTable  
            existingTableName="person"  existingColumnName="state"  
            newTableName="state"  newColumnName="id"  newColumnDataType="char(2)"/>  
    </changeSet>  

    <changeSet id="4" author="Maheedhar">
        <insert  catalogName="liquibase_test"  
            dbms="!h2, mysql"  
            schemaName="public"  
            tableName="state">  
        <column  name="id"  value="AP"/>    
    </insert>
    </changeSet>        

    <changeSet id="5" author="Maheedhar">
        <insert  catalogName="liquibase_test"  
            dbms="!h2, mysql"  
            schemaName="public"  
            tableName="person">  
        <column  name="id"  value="123"/>
        <column  name="firstname"  value="Maheedhar"/>
        <column  name="lastname"  value="Talluri"/>
        <column  name="state">
            <constraints nullable="false" references="state(id)"/>
        </column>
        <column  name="username"  value="Mahi"/>     
    </insert>
    </changeSet>

    <changeSet id="6" author="Maheedhar">
        <insert  catalogName="liquibase_test"  
            dbms="!h2, mysql"  
            schemaName="public"  
            tableName="state">  
        <column  name="id"  value="TS"/>    
    </insert>
    </changeSet>   
        <changeSet id="7" author="Sasidhar">
        <insert  catalogName="liquibase_test"  
            dbms="!h2, mysql"  
            schemaName="public"  
            tableName="person">  
        <column  name="id"  value="456"/>
        <column  name="firstname"  value="Sasi"/>
        <column  name="lastname"  value="T"/>
        <column  name="state">
            <constraints nullable="false" references="state(id)"/>
        </column>
        <column  name="username"  value="Sasi"/>     
    </insert>
    </changeSet>
        <changeSet  id="create-table"  author="Maheedhar">  
        <createTable  tableName="test-table">    
        </createTable>  
    </changeSet>

    <changeSet  id="dropTable-example" author="Maheedhar">  
    <dropTable  cascadeConstraints="true"  
            catalogName="liquibase_test"  
            schemaName="public"  
            tableName="test-table"/>  
    </changeSet>

</databaseChangeLog>